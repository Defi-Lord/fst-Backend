{
  "name": "fst-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node --env-file=.env dist/server.js",
    "build": "tsc && npx prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:gen": "prisma generate",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@noble/ed25519": "^2.3.0",
    "@prisma/client": "^5.18.0",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "description": "Backend API for Fantasy Sports Tournament (FST). Features: Solana wallet login with nonce + signature -> JWT authentication, role-based access, contest realms (free, weekly, monthly, seasonal), prize pools, leaderboards, admin dashboard, and audit logging.",
