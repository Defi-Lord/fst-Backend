{
  "name": "fst-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "node ./node_modules/prisma/build/index.js generate && node ./node_modules/prisma/build/index.js db push && tsc",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "prisma:gen": "node ./node_modules/prisma/build/index.js generate",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@noble/ed25519": "^2.3.0",
    "@prisma/client": "^5.22.0",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/web3.js": "^1.98.4",
    "@types/mongoose": "^5.11.96",
    "bs58": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.0",
    "framer-motion": "^12.23.24",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^8.19.3",
    "morgan": "^1.10.1",
    "node-cache": "^5.1.2",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cache": "^4.1.3",
    "@types/node-fetch": "^2.6.13",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "description": "Backend API for Fantasy Sports Tournament (FST). Features: Solana wallet login with nonce + signature -> JWT authentication, role-based access, contest realms (free, weekly, monthly, seasonal), prize pools, leaderboards, admin dashboard, and audit logging.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "keywords": [
    "solana",
    "wallet",
    "jwt",
    "express",
    "prisma",
    "backend"
  ],
